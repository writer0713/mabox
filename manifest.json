{
  "name": "Mabox",
  "description": "Mybox player를 사용하기 편하게 커스터마이징",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mybox.naver.com/*"],
      "css": ["mabox.css"]
    }
  ],
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/mabox-16x16.png",
      "32": "/images/mabox-32x32.png",
      "48": "/images/mabox-48x48.png",
      "128": "/images/mabox-128x128.png"
    }
  },
  "icons": {
    "16": "/images/mabox-16x16.png",
    "32": "/images/mabox-32x32.png",
    "48": "/images/mabox-48x48.png",
    "128": "/images/mabox-128x128.png"
  },
  "options_page": "options.html"
}
